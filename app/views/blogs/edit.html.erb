<h2>Edit Blog</h2>

<%= render "errors", obj: @blog %>

<%= form_for @blog, html: { class: "form-horizontal" }, method: :put do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, placeholder: "title is required", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, cols: "40", rows: "5", placeholder: "Enter description", class: "form-control", maxlength: 255 %>
  </div>

  <div class="form-group">
    <%= f.label :font %>
    <%= f.text_field :font, required: true, placeholder: "font is required", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :colour %>
    <%= f.text_field :colour, required: true, type: "color", placeholder: "colour is required", class: "form-control", default: "#{@blog.colour}" %>
  </div>

  <div class="form-group">
    <%= link_to "Cancel", :back, class: "btn btn-default" %>
    <%= f.submit "Update", class: "btn btn-primary", "data-disable-with" => "Please wait.." %>
  </div>
<% end %>
